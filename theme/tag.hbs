{{!< default}}

{{#tag}}
  <header class="gh-page-head mb-4">
    <h1 class="font-bold text-4xl">{{name}}</h1>
    <p class="font-semibold text-xl opacity-60 my-2">
      {{#if description}}
        {{description}}
      {{else}}
        Jelajahi {{plural ../pagination.total empty='Artikel' singular='% Artikel' plural='% Artikel'}}
      {{/if}}
    </p>
  </header>
{{/tag}}

<div class="lg:flex gap-8">
  <div class="max-w-prose flex-shrink-0">
    <div class="flex flex-col gap-6">
      {{#foreach posts}}
        {{> components/post-card}}
      {{/foreach}}
    </div>

    {{pagination}}
  </div>
  <aside class="mt-8 lg:mt-0 min-w-80">
    <div class="mb-8">
      {{> components/subscribe-form}}
    </div> 
    {{#get "posts" filter="featured:true" limit="all" as | featured|}}
      {{#if featured}}
        <section>
          <h2 class="text-xs font-semibold uppercase mb-4">Artikel Unggulan</h2>
          <div class="flex flex-col gap-2">
            {{#foreach featured}}
              {{> components/post-strip}}
            {{/foreach}}
          </div>
        </section>
      {{/if}}
    {{/get}}
  </aside>
</div>